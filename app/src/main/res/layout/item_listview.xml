<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:orientation="horizontal"
        app:layout_heightPercent="10%w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_list"
            app:layout_marginLeftPercent="3%w"
            app:layout_paddingPercent="1%w"
            app:layout_widthPercent="6.5%w"
            app:layout_heightPercent="6.5%w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_list"
            android:textColor="#ff0000"
            app:layout_textSizePercent="4.3%w"
            android:layout_weight="2"
            app:layout_marginLeftPercent="3%w"
            android:text="景点查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            app:layout_marginRightPercent="3%w"
            android:src="@mipmap/right"
            app:layout_widthPercent="5%w"
            app:layout_heightPercent="5%w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        app:layout_marginRightPercent="3%w"
        app:layout_marginLeftPercent="3%w"
        android:background="#c7c7c7"
        app:layout_heightPercent="0.5%w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.zhy.android.percent.support.PercentLinearLayout>