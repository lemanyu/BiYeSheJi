<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wechat_title"
                android:ellipsize="end"
                app:layout_textSizePercent="7%w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="朴槿惠“亲信干政”事件：崔顺实主动接受传讯 口罩遮面沉默不语【组图】"
                android:textColor="#000000"
                android:textSize="18sp" />

            <com.zhy.android.percent.support.PercentLinearLayout
                app:layout_marginPercent="2%w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_wechat_description"
                    app:layout_textSizePercent="5%w"
                    android:textColor="#ff0000"
                    app:layout_paddingPercent="1%w"
                    android:background="@drawable/round_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人民网" />

                <TextView
                    android:id="@+id/tv_wechat_ctime"
                    app:layout_textSizePercent="6%w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="2017-08-20"
                    app:layout_marginLeftPercent="30%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <android.support.v7.widget.CardView
            app:layout_widthPercent="30%w"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_wechat_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55ffffff"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </android.support.v7.widget.CardView>

    </com.zhy.android.percent.support.PercentLinearLayout>

</android.support.v7.widget.CardView>