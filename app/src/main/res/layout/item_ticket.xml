<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_bus_title"
        android:gravity="center"
        android:textColor="#ff0000"
        android:text="地铁4号线(地铁安河桥北站-地铁天宫院站)"
        app:layout_textSizePercent="6%w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <com.zhy.android.percent.support.PercentLinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_bus_start"
           android:textColor="#000"
           android:layout_gravity="center"
           android:layout_weight="1"
           app:layout_textSizePercent="5%w"
           android:text="出发点：西直门"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <ImageView
           android:layout_weight="1"
           android:src="@drawable/right"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/tv_bus_end"
           android:gravity="right"
           android:textColor="#000"
           android:layout_gravity="center"
           android:layout_weight="1"
           app:layout_textSizePercent="5%w"
           android:text="到达点：西单"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </com.zhy.android.percent.support.PercentLinearLayout>
  <TextView
      android:id="@+id/tv_bus_station"
      app:layout_textSizePercent="5.5%w"
      android:text="经过的站点：西直门;地铁新街口站;平安里;西四;灵境胡同;西单"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
</com.zhy.android.percent.support.PercentLinearLayout>