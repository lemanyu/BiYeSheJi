<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
      <com.zhy.android.percent.support.PercentLinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical">
          <TextView
              android:id="@+id/tv_scenic_title"
              app:layout_paddingPercent="2%w"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="黄山"
              android:textColor="#000000"
              android:textSize="18sp"
              app:layout_textSizePercent="5%w" />
          <TextView
              android:id="@+id/tv_scenic_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="1"
              android:text="安徽省黄山市黄山风景"
              android:textSize="18sp"
              app:layout_textSizePercent="4%w" />
      </com.zhy.android.percent.support.PercentLinearLayout>
            <ImageView
                android:id="@+id/iv_scenic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/a"
                app:layout_heightPercent="40%w" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="1%w">
                <TextView
                    android:id="@+id/tv_scenic_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bg"
                    android:text="景区等级：AAAAA"
                    android:textColor="#ff0000"
                    app:layout_paddingPercent="1%w"
                    app:layout_textSizePercent="3%w" />
                <TextView
                    android:id="@+id/tv_scenic_price_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前价格：50"
                    app:layout_marginLeftPercent="2%w"
                    app:layout_paddingPercent="1%w"
                    app:layout_textSizePercent="4%w" />
                <Button
                    android:textColor="#fff"
                    android:id="@+id/bt_scenic"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="#ff0000"
                    android:text="在线订票" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>

</android.support.v7.widget.CardView>